<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="repositoryInterceptor" class="com.jwh.demo.aop.RepositoryInterceptor"/>

    <!--方法拦截器 -->
    <bean id="repositoryAop"  class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="beanNames">
            <list>
                <value>*Repository</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>repositoryInterceptor</value>
            </list>
        </property>
    </bean>
</beans>